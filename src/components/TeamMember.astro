---
import { Icon } from 'astro-icon'
import { Image } from 'astro:assets'

interface Props {
	name: string,
	altName?: string,
	websiteHref?: string,
	githubHref?: string,
	redditHref?: string,
	avatarSrc?: string,
}

const { name, altName, websiteHref, githubHref, redditHref, avatarSrc } = Astro.props
---

<div class="flex flex-col justify-center p-2 rounded border border-gray-300 dark:border-gray-600 mr-2 mb-2">
	<div class="flex flex-row items-center gap-2">
		{ avatarSrc && <Image src={ avatarSrc } alt={ "Profile picture of " + name } class="h-12 w-12" width="192" height="192"></Image> }
		<div class="gap-1">
			<p>{ name } { altName &&  <small class="text-gray-600 dark:text-gray-400">({ altName })</small> } </p>
			{ ( websiteHref || githubHref || redditHref ) && <p class="flex gap-1">
				{ websiteHref && <a class="text-gray-500 hover:text-black active:text-black dark:active:text-white dark:hover:text-white" href={websiteHref}>
					<Icon name="bi:globe" class="w-4 4-4"></Icon>
				</a> }
				{ githubHref &&<a class="text-gray-500 hover:text-black active:text-black dark:active:text-white dark:hover:text-white" href={githubHref}>
					<Icon name="simple-icons:github" class="w-4 h-4"></Icon>
				</a> }
				{ redditHref && <a class="text-gray-500 hover:text-black active:text-black dark:active:text-white dark:hover:text-white" href={redditHref}>
					<Icon name="simple-icons:reddit" class="w-4 h-4"></Icon>
				</a> }
			</p> }
		</div>
	</div>
</div>
